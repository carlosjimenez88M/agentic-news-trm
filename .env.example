# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API Key (not currently used)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: Google API Key (not currently used)
# GOOGLE_API_KEY=your_google_api_key_here

# GCP Configuration (optional, for cloud storage)
# GCP_PROJECT_ID=your_gcp_project_id
# GCP_BUCKET_NAME=agentic-news-trm-prod
# GCP_CREDENTIALS_PATH=/path/to/service-account-key.json

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=text  # text or json

# Pipeline Configuration
MAX_ARTICLES_PER_RUN=100
SCRAPE_TIMEOUT_SECONDS=30
ENABLE_GCS_UPLOAD=false  # Set to true to enable GCP uploads

# Monitoring & Alerts
ENABLE_COST_ALERTS=true
DAILY_COST_THRESHOLD_USD=10.0
# ALERT_EMAIL=your_email@example.com

# Testing
MOCK_LLM=false  # Set to true for testing without API costs
TEST_MODE=false
